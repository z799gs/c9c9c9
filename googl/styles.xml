<body>
  <div id="pixel-chat-container"></div>
  <script src="https://cdn.jsdelivr.net/gh/z799gs/c9c9c9@main/fli/pixelchat.js"></script>
  
  <script>
    PixelChatApp.setApiUrl('https://script.google.com/macros/s/AKfycbyP1xL6FZzLdXK4uSwXs-xp5Oejuc_Vf_r4_3FDRLlajw4vHMFVhu0MIvmHHDE1o8kF/exec');
    PixelChatApp.init('pixel-chat-container');
